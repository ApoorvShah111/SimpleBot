<?xml version="1.0"?>
<robot name="simple_bot">
	<material name="rubber">
		<color rgba="0 0 0 1"/>
	</material>
	<material name="steel">
		<color rgba="0.75 0.75 0.75 1"/>
	</material>

	<link name="base_link">
		<visual>
			<geometry>
				<box size= "0.3 0.8 0.3"/>
			</geometry>
			<material name="steel"/>
		</visual>
		<collision>
			<geometry>
				<box size= "0.3 0.8 0.3"/>
			</geometry>
		</collision>
		<inertial>
			<mass value="1"/>
			<inertia ixx="0.0608333333"  iyy="0.015" izz="0.0608333333" ixy="0" ixz="0" iyz="0"/>
		</inertial>
	</link>
	<link name="wheel_1">
		<visual>
			<geometry>
				<cylinder length="0.01" radius="0.2" />
			</geometry>
			<material name="rubber"/>
			<origin rpy="0 1.57 0" xyz="0.005 0 0"/>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.01" radius="0.2"/>
			</geometry>
		</collision>
		<inertial>
			<mass value="1"/>
			<inertia ixx="0.02"  iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
		</inertial>
	</link> 
<!--	<joint name="Wheel1ToBase" type="fixed">
		<parent link="base_link"/>
		<child link="wheel_1"/>
		<origin xyz="0.15 0.4 0"/>
	</joint> -->
	<joint name="Wheel1ToBaseMove" type="continuous">
		<parent link="base_link"/>
		<child link="wheel_1"/>
		<axis xyz="1 0 0"/>
		<origin xyz="0.15 0.4 0"/>
		<limit effort="30.0" velocity="3.0"/>
	</joint>
    	<gazebo reference="wheel_1">
      		<mu1 value="200.0"/>
      		<mu2 value="100.0"/>
      		<kp value="10000000.0" />
      		<kd value="1.0" />
      		<material>Gazebo/Grey</material>
    	</gazebo>
    	<transmission name="wheel1_rotate_trans">
      		<type>transmission_interface/SimpleTransmission</type>
      		<actuator name="Wheel1Motor">
        		<mechanicalReduction>1</mechanicalReduction>
      		</actuator>
      		<joint name="Wheel1ToBaseMove">
        		<hardwareInterface>VelocityJointInterface</hardwareInterface>
      		</joint>
    	</transmission>
